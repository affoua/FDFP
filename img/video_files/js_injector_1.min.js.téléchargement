jQuery(function($){$(document).ready(function(){console.log($(location).attr("href"));var path,currentMenu;path=$(location).attr("href");currentMenu=path.split("/");currentMenu=currentMenu[4];console.log("Current Menu: ",currentMenu);switch(currentMenu){case "ministere":$("#dexp-dropdown .menu li:nth-child(2)  > a:first-child").addClass("active");break;case "formations":$("#dexp-dropdown .menu li:nth-child(3)  > a:first-child").addClass("active");break;case "statistiques":$("#dexp-dropdown .menu li:nth-child(4)  > a:first-child").addClass("active");
break;case "examens-et-concours":$("#dexp-dropdown .menu li:nth-child(5)  > a:first-child").addClass("active");break;case "projets":$("#dexp-dropdown .menu li:nth-child(6)  > a:first-child").addClass("active");break;case "actualites":$("#dexp-dropdown .menu li:nth-child(7)  > a:first-child").addClass("active");break;case "contacts":$("#dexp-dropdown .menu li:nth-child(8) > a:first-child").addClass("active");break}})});